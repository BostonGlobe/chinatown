R:

	Rscript -e "rmarkdown::render('data/chinatown.Rmd')"
	open data/chinatown.html

R_deploy:

	cp data/chinatown.html /Volumes/www_html/multimedia/graphics/projectFiles/Rmd/
	rsync -rv data/chinatown_files /Volumes/www_html/multimedia/graphics/projectFiles/Rmd
	open http://private.boston.com/multimedia/graphics/projectFiles/Rmd/chinatown.html

download:

	cd data/input/downloaded; curl http://wsgw.mass.gov/data/gispub/shape/census2010/CENSUS2010_BLK_BG_TRCT_SHP.zip > blocks.zip; unzip blocks.zip;
	cd data/input/downloaded; curl http://wsgw.mass.gov/data/gispub/shape/census2010/PL_94-171_TABLES_DBASE.zip > pl_tables.zip; unzip pl_tables.zip;

prepare:

	# cd data/input/downloaded; ogr2ogr -where 'GEOID10 IN ("250250701011037","250250701017006","250250701017003","250250701011068","250250701011066","250250701017008","250250701011039","250250701011053","250250701011052","250250701011036","250250701017002","250250701017005","250250701011054","250250701011033","250250701011067","250250701017001","250250701011035","250250701011034","250250701017007","250250701017004","250250701011051","250250701011038","250250702002001","250250702001009","250250702003010","250250702003011","250250702003009","250250702001008","250250702002004","250250702001000","250250702001005","250250702001003","250250702001001","250250702001007","250250702001012","250250702001013","250250702001004","250250702001011","250250702002000","250250702002002","250250702001015","250250702001002","250250702003007","250250702001014","250250702001006","250250702003008","250250702002003","250250702002005","250250702001016","250250702001010","250250704021008","250250704021007","250250704021006")' BRA.shp CENSUS2010BLOCKS_POLY.shp;

	cd data/input/downloaded; ogr2ogr -where 'COUNTYFP10="025"' SUFFOLK.shp CENSUS2010BLOCKS_POLY.shp;


